@model sistema_de_ponto.Models.Justificativa

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Solicitação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col">
                    
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Data" class="control-label"></label>
                                <input type="date" asp-for="Data" class="form-control" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">

                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                                    <option value="1" selected="selected" title="">Selecione</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Motivo" class="control-label"></label>
                            <textarea asp-for="Motivo" class="form-control" rows="10"></textarea>

                            <span asp-validation-for="Motivo" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                             <label asp-for="Arquivo" class="control-label"></label>
                             <input asp-for="Arquivo" class="form-control" />
                                <span asp-validation-for="Arquivo" class="text-danger"></span>
                            
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="FuncionarioId" class="control-label"></label>
                                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="PontoId" class="control-label"></label>
                                <select asp-for="PontoId" class="form-control" asp-items="ViewBag.PontoId"></select>
                            </div>
                        </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-warning rounded-pill" />
                        <a asp-action="Solicitacoes" class="btn btn-secondary rounded-pill">Cancelar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
